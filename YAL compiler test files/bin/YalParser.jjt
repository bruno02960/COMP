/* ScalarAccess ::= <ID> ( "." <SIZE> )? */
void ScalarAccess() #SCALARACCESS :
{
  Token t;
}
{
  t = < ID >
  {
    if (jjtThis.value != "") jjtThis.value += " " + t.image;
    else jjtThis.value += t.image;
  }
  (< PONTO > < SIZE >)?
}

/*Index ::= <ID> | <INTEGER>*/
void Index() #INDEX :
{
  Token t;
}
{
  t = < ID >
  {
    if (jjtThis.value != "") jjtThis.value += " " + t.image;
    else jjtThis.value += t.image;
  }
| t = < INTEGER >
  {
    if (jjtThis.value != "") jjtThis.value += " " + t.image;
    else jjtThis.value += t.image;
  }
}
